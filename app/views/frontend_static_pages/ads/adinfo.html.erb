<script type="text/javascript">
  var adTypeSelect=document.getElementById("adType");
  var colSelect=document.getElementById("columnsWide");
  var heightSelect=document.getElementById("inchesTall");
  var colorBox=document.getElementById("color");
  var specialPlacementBox=document.getElementById("specialPlacement");
  var costPerCI=<%= @ci_cost %>;
  var colorCost=<%= @color_cost %>;
  var specialPlacementFactor=1+(<%= @special_placement_percentage %>/100.0);

  function updateCost() {
      // Note: Next two lines assume that the width/height options a) start at 1 b) increase by 1 each time and c) are in order
      var w=colSelect.selectedIndex+1;
      var h=heightSelect.selectedIndex+1;
      var c=costPerCI*w*h;

      if (specialPlacementBox.checked){
  	   c=c*specialPlacementFactor;
      }

      if (colorBox.checked){
  	   c=c+colorCost;
      }
      c=formatAsMoney(c);
      document.getElementById('costOfAd').innerHTML='$'+c;
      getType();
  }
  function setType(){
      adType=adTypeSelect.options[adTypeSelect.selectedIndex].value;
      switch(adType) {
      case "custom":
  	   break;
      case "eigth":
  	   colSelect.selectedIndex=1; //Set to two columns wide; assumes value is one greater than index
  	   heightSelect.selectedIndex=4; //Set to five inches tall; assumes value is one greater than index
  	   break;
      case "quartVert":
  	   colSelect.selectedIndex=2;
  	   heightSelect.selectedIndex=7;
  	   break;
      case "quartHoriz":
  	   colSelect.selectedIndex=3;
  	   heightSelect.selectedIndex=5;
  	   break;
      case "halfVert":
  	   colSelect.selectedIndex=3;
  	   heightSelect.selectedIndex=9;
  	   break;
      case "halfHoriz":
  	   colSelect.selectedIndex=4;
  	   heightSelect.selectedIndex=7;
  	   break;
      case "full":
  	   colSelect.selectedIndex=4;
  	   heightSelect.selectedIndex=15;
  	   break;
      default:
  	   break;
      }
      if (adType != "custom") {
  	   updateCost();
      }
  }

  function getType(){
      var w=colSelect.selectedIndex+1;
      var h=heightSelect.selectedIndex+1;
      switch(w) {
      case 2:
  	   if (h==5) {
  	       adTypeSelect.selectedIndex=1;
  	   }
  	   break;
      case 3:
  	   if (h==8) {
  	       adTypeSelect.selectedIndex=2;
  	   }
  	   break;
      case 4:
  	   if (h==6) {
  	       adTypeSelect.selectedIndex=3;
  	   }
  	   else if (h==10) {
  	       adTypeSelect.selectedIndex=4;
  	   }
  	   break;
      case 5:
  	   if (h==8) {
  	       adTypeSelect.selectedIndex=5;
  	   }
  	   else if (h==16) {
  	       adTypeSelect.selectedIndex=6;
  	   }
  	   break;
      default:
  	   adTypeSelect.selectedIndex=0;
  	   break;
      }

  }
  function formatAsMoney(n){
      n-=0;
      n=(Math.round(n*100)/100);
      return (n==Math.floor(n)) ? n + '.00' : ( (n*10==Math.floor(n*10)) ? n + '0' : n);
  }
  updateCost(); //On reload, select options don't go back to default; calling updateCost here ensures the cost displayed will be correct on reload.
</script>
