<%= form_for @image, :html => { :multipart => true } do |f| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul>
      <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if local_assigns[:show_creation_piece_id] %>
    <div class="form-group">
      <%= label_tag :piece_id, 'Assigned piece' %>
      <%= select_tag :piece_id, options_for_select([['[Create New Piece]', nil]]) + options_from_collection_for_select(Piece.all, :id, :name), {class: 'form-control'} %>
    </div>
  <% end %>

  <div class="form-group" id="section_id_select">
    <%= label :section_id, 'Section' %>
    <%= select_tag :section_id, options_from_collection_for_select(Section.all, :id, :name), {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_field :caption, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :attribution %><br>
    <%= f.text_field :attribution, class: 'form-control' %>
  </div>


  <!-- Styling borrowed from http://www.abeautifulsite.net/whipping-file-inputs-into-shape-with-bootstrap-3/ -->
  <div class="form-group">
    <p id="filepath">
    </p>
    <span class="btn btn-info btn-file">
      Choose asset <%= f.file_field :content %>
    </span>
  </div>

  <div class="actions">
    <%= f.submit 'Create Image', class: 'btn btn-success' %>
  </div>
<% end %>
