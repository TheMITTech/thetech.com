<h1><%= @issue.name %></h1>

<% @articles.each do |sec, articles| %>
  <h2><%= sec %></h2>

  <table class="table" id="articles_table">
    <thead>
      <tr>
        <th class="center">Section</th>
        <th class="center">Web Published?</th>
        <th class="center">Print Ready?</th>
        <th>Article</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render 'articles/article_list', json_articles: articles, mark_print_status: true %>
    </tbody>
  </table>
<% end %>

<% if @images.any? %>
  <h2>Images</h2>

  <table class="table">
    <thead>
      <tr>
        <th class="center">Publish Ready? </th>
        <th>Image</th>
        <th></th>
        <th class="center image_thumbnail_header">Thumbnail</th>
      </tr>
    </thead>
    <tbody>
      <%= render 'images/image_list', images: @images %>
    </tbody>
  </table>
<% end %>

