/ This file HAS TO BE NAMED .html.haml
/ Otherwise Rails would also render JS responses with this layout
/ Oh well...

!!!
%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = include_gon
    %meta{charset: "utf-8"}/
    %meta{content: "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    =javascript_pack_tag "admin"
    %title #{!@title.blank? ? "#{@title} |" : ""} TT CMS
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    / For third-generation iPad with high-resolution Retina display:
    / Size should be 144 x 144 pixels
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '144x144'
    / For iPhone with high-resolution Retina display:
    / Size should be 114 x 114 pixels
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '114x114'
    / For first- and second-generation iPad:
    / Size should be 72 x 72 pixels
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', sizes: '72x72'
    / For non-Retina iPhone, iPod Touch, and Android 2.1+ devices:
    / Size should be 57 x 57 pixels
    = favicon_link_tag 'apple-touch-icon-precomposed.png', rel: 'apple-touch-icon-precomposed', type: 'image/png'
    / For all other devices
    / Size should be 32 x 32 pixels
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'
    = stylesheet_link_tag "admin", media: "all"
    = javascript_include_tag "admin"
    = javascript_include_tag "/ckeditor/ckeditor.js"
  %body{id: "#{params[:controller]}_#{params[:action]}", "ng-app" => ""}
    .navbar.navbar-expand-lg.navbar-static-top.bg-light
      .container
        %a.navbar-brand{href: root_url} Tech
        %ul.navbar-nav.me-auto.mb-2.mb-lg-0
          - if user_signed_in?
            %li.navbar-text.me-2
              Welcome, #{current_user.name}
            %li.nav-item.me-2= link_to 'Profile', edit_user_registration_path, class: 'nav-link'
            %li.nav-item.me-2= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link'
          - else
            %li.nav-item.me-2= link_to 'Sign Up', new_user_registration_path, class: 'nav-link'
            %li.nav-item.me-2= link_to 'Sign In', new_user_session_path, class: 'nav-link'
        %ul.nav.navbar-nav
          - if user_signed_in?
            %li.nav-item.dropdown.me-2
              %a.dropdown-toggle.nav-link#contentDropdownMenuLink{'data-bs-toggle': 'dropdown'}
                Content
                %span.caret
              %div.dropdown-menu{'aria-labelledby': 'contentDropdownMenuLink'}
                = link_to 'Articles', articles_path, data: {no_turbolink: true}, class: 'dropdown-item'
                = link_to 'Images', images_path, class: 'dropdown-item'
                = link_to 'Homepages', homepages_path, class: 'dropdown-item'
                = link_to 'Issues', issues_path, class: 'dropdown-item'
                = link_to 'Authors', authors_path, class: 'dropdown-item'
            %li.nav-item.me-2= link_to 'Ads', ads_path, class: 'nav-link'
            %li.nav-item.dropdown.me-2
              %a.dropdown-toggle.nav-link#adminDropdownMenuLink{'data-bs-toggle': 'dropdown'}
                Admin
                %span.caret
              %div.dropdown-menu{'aria-labelledby': 'adminDropdownMenuLink'}
                = link_to 'Users', users_path, class: 'dropdown-item'
                = link_to 'Sections', sections_path, class: 'dropdown-item'
            / TODO: Let's get rid of the publishing dashboard altogether
            - if can? :publish, Homepage
              %li= link_to 'Publish', publishing_dashboard_path, class: 'nav-link'
    .container
      .row
        .col-lg-12
          = simple_formatted_bootstrap_flash
          = yield
    / A hidden element to trigger the FA font to preload
    %i.fa.fa-circle-o-notch.fa-spin#spin-preloader
