<h1>Articles</h1>

<table class="table" id="articles_table">
  <thead>
    <tr>
      <th>Section</th>
      <th>Article</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <td colspan="5">
        <input id="keywords" type="text" placeholder="Filter articles here. " class="form-control"data-filter-url="<%= articles_path format: :json %>">
      </td>
      <tr ng-repeat="article in articles" title="{{ article.slug }}">
        <td>{{ article.section_name }}</td>
        <td>
          <p class="headline">{{ article.headline }}</p>
          <p class="subhead" ng-if="article.subhead">{{ article.subhead }}</p>
          <p class="byline">By {{ article.authors_line }}
            <span ng-if="article.bytitle">â€” {{ article.bytitle }}</span>
          </p>
        </td>
        <td><a href="{{ article.versions_path }}">Versions</a></td>
      </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: 'btn btn-primary', data: { no_turbolink: true } %>
