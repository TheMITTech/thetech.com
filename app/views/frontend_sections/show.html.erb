<div class="tag-header">
  <h1><%= @section.name %></h1>
  <p class="article-count">
    <%= pluralize @count, 'article' %>
    <% if @count > 0 %>
      in <%= sections @sections %>
    <% end %>
  </p>
</div>

<%= render 'frontend_pieces/article_list', articles: @articles %>

<%= paginate @pieces %>